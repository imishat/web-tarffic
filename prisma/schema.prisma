// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Catagory {
  id            Int             @id @default(autoincrement())
  name          String
  descripton    String
  picture       String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  Header        Header[]
  SubCatagory   SubCatagory[]
  CatagoryBlogs CatagoryBlogs[]
  CatagoryFaq   CatagoryFaq[]
}

model Header {
  id         Int       @id @default(autoincrement())
  title      String
  descripton String
  picture    String?
  catagoryId Int?
  Catagory   Catagory? @relation(fields: [catagoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SubCatagory {
  id         Int      @id @default(autoincrement())
  name       String
  descripton String
  picture    String?
  catagoryId Int
  catagory   Catagory @relation(fields: [catagoryId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model CatagoryBlogs {
  id         Int      @id @default(autoincrement())
  title      String
  descripton String
  picture    String?
  catagoryId Int
  catagory   Catagory @relation(fields: [catagoryId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model CatagoryFaq {
  id         Int      @id @default(autoincrement())
  Question   String
  Answer     String
  catagoryId Int
  catagory   Catagory @relation(fields: [catagoryId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Blogs {
  id         Int      @id @default(autoincrement())
  title      String
  descripton String
  picture    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
